{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Real GDP of Malaysia",
    "fontSize": 26,
    "anchor": "middle",
    "align": "center"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/NewBBBBBB/FIT3179-Assignment-2/refs/heads/main/data/gdp_qtr_real.csv",
    "format": {
      "type": "csv",
      "parse": {
        "date": "utc:'%d/%m/%Y'"
      }
    }
  },
  "vconcat": [
    {
      "width": "container",
      "height": 240,
      "layer": [
        {
          "mark": {
            "type": "line",
            "tooltip": true,
            "color": "black",
            "point": {
              "color": "blackF"
            }
          },
          "encoding": {
            "x": {
              "field": "date",
              "type": "temporal",
              "scale": {
                "domain": {
                  "param": "brush"
                }
              },
              "axis": {
                "title": "",
                "tickCount": 10
              }
            },
            "y": {
              "field": "value",
              "type": "quantitative",
              "axis": {
                "title": "Value (RM millions)"
              },
              "scale": {
                "domain": [
                  200000,
                  450000
                ]
              }
            },
            "tooltip": [
              {
                "field": "date",
                "type": "temporal",
                "title": "Date"
              },
              {
                "field": "value",
                "type": "quantitative",
                "title": "Value"
              }
            ]
          }
        },
        {
          "transform": [
            {
              "calculate": "datetime(2020, 3, 1)",
              "as": "april2020"
            }
          ],
          "mark": {
            "type": "rule",
            "color": "red",
            "strokeWidth": 2
          },
          "encoding": {
            "x": {
              "field": "april2020",
              "type": "temporal"
            }
          }
        },
        {
          "transform": [
            {
              "calculate": "datetime(2020, 3, 1)",
              "as": "april2020"
            }
          ],
          "mark": {
            "type": "text",
            "dx": 100,
            "dy": 100,
            "fontSize": 12,
            "color": "black",
            "text": "Sharp decrease due to COVID-19"
          },
          "encoding": {
            "x": {
              "field": "april2020",
              "type": "temporal"
            }
          }
        }
      ]
    },
    {
      "width": "container",
      "height": 60,
      "layer": [
        {
          "mark": {
            "type": "line",
            "color": "black"
          },
          "params": [
            {
              "name": "brush",
              "select": {
                "type": "interval",
                "encodings": [
                  "x"
                ]
              }
            }
          ],
          "encoding": {
            "x": {
              "field": "date",
              "type": "temporal",
              "axis": {
                "title": "Date",
                "tickCount": 10
              }
            },
            "y": {
              "field": "value",
              "type": "quantitative",
              "scale": {
                "domain": [
                  200000,
                  450000
                ]
              },
              "axis": {
                "title": "Value",
                "tickCount": 3,
                "grid": false
              }
            }
          }
        },
        {
          "transform": [
            {
              "calculate": "datetime(2020, 3, 1)",
              "as": "april2020"
            }
          ],
          "mark": {
            "type": "rule",
            "color": "red",
            "strokeWidth": 2
          },
          "encoding": {
            "x": {
              "field": "april2020",
              "type": "temporal"
            }
          }
        }
      ]
    }
  ]
}