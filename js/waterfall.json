{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 930,
    "height": 450,
    "background": "transparent",  
    "data": {
        "url": "https://raw.githubusercontent.com/NewBBBBBB/FIT3179-Assignment-2/refs/heads/main/data/fdi_flows(1).csv"
    },
    "layer": [
        {
            "transform": [
                {
                    "filter": "datum.type == 'year'"
                }
            ],
            "params": [
                {
                    "name": "highlight",
                    "select": {
                        "type": "point",
                        "on": "pointerover"
                    }
                },
                {
                    "name": "select",
                    "select": "point"
                }
            ],
            "mark": {
                "type": "bar",
                "color": "lightgreen",
                "stroke": "black"
            },
            "encoding": {
                "x": {
                    "field": "date",
                    "type": "ordinal",
                    "axis": {
                        "title": "Year",
                        "labelAngle": 0
                    }
                },
                "y": {
                    "field": "outflow",
                    "type": "quantitative"
                },
                "y2": {
                    "field": "inflow"
                },
                "fillOpacity": {
                    "condition": {
                        "param": "select",
                        "value": 1
                    },
                    "value": 0.3
                },
                "strokeWidth": {
                    "condition": [
                        {
                            "param": "select",
                            "empty": false,
                            "value": 2
                        },
                        {
                            "param": "highlight",
                            "empty": false,
                            "value": 1
                        }
                    ],
                    "value": 0
                },
                "tooltip": [
                    {
                        "field": "date",
                        "title": "Year"
                    },
                    {
                        "field": "inflow",
                        "type": "quantitative",
                        "format": ".2f",
                        "title": "Inflow (RM bil)"
                    },
                    {
                        "field": "outflow",
                        "type": "quantitative",
                        "format": ".2f",
                        "title": "Outflow (RM bil)"
                    },
                    {
                        "field": "net",
                        "type": "quantitative",
                        "format": ".2f",
                        "title": "Netflow (RM bil)"
                    }
                ]
            }
        },
        {
            "transform": [
                {
                    "filter": "datum.type == 'total'"
                }
            ],
            "mark": {
                "type": "bar",
                "color": "lightblue",
                "stroke": "black"
            },
            "encoding": {
                "x": {
                    "field": "date",
                    "type": "ordinal"
                },
                "y": {
                    "field": "inflow",
                    "type": "quantitative"
                },
                "fillOpacity": {
                    "condition": {
                        "param": "select",
                        "value": 1
                    },
                    "value": 0.3
                },
                "strokeWidth": {
                    "condition": [
                        {
                            "param": "select",
                            "empty": false,
                            "value": 2
                        },
                        {
                            "param": "highlight",
                            "empty": false,
                            "value": 1
                        }
                    ],
                    "value": 0
                },
                "tooltip": [
                    {
                        "field": "date",
                        "title": "Period"
                    },
                    {
                        "field": "inflow",
                        "type": "quantitative",
                        "format": ".2f",
                        "title": "Total Net FDI (RM bil)"
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "fontSize": 12,
                "fontStyle": "italic",
                "color": "black",
                "dx": 0,
                "dy": 100
            },
            "encoding": {
                "text": {
                    "value": "COVID-19 strikes"
                }
            }
        },
        {
        "mark": {"type": "text", "angle": 270, "dx": -70, "dy":0,"fontSize": 35,"shape":"arrow"},
        "encoding": {
        "text": {"value": "\uD83E\uDC46"}
        }
      }
    ],
    "encoding": {
        "y": {
            "axis": {
                "title": "FDI Value (RM bil)"
            }
        }
    }
}