{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 500,
    "height": 600,
    "description": "Scatter plot with lines connecting the points, showing the relationship between net flows of FDI and GDP per capita over time.",
    "data": {
      "url": "https://raw.githubusercontent.com/NewBBBBBB/FIT3179-Assignment-2/refs/heads/main/data/annual_fdi_and_gdp_per_capita.csv",
      "format": { "type": "csv" }
    },
    "layer": [
      {
        "mark": "line",
        "encoding": {
          "x": {
            "field": "net",
            "type": "quantitative",
            "title": "Net Flows of FDI"
          },
          "y": {
            "field": "gdp_capita",
            "type": "quantitative",
            "title": "GDP Per Capita",
            "scale": {
              "domain": [30000, 50000]
            }
          },
          "color": {
            "field": "year",
            "type": "nominal"
          }
        }
      },
      {
        "mark": "circle",
        "encoding": {
          "x": {
            "field": "net",
            "type": "quantitative",
            "title": "Net Flows of FDI"
          },
          "y": {
            "field": "gdp_capita",
            "type": "quantitative",
            "title": "GDP Per Capita",
            "scale": {
              "domain": [30000, 50000]
            }
          },
          "color": {
            "field": "year",
            "type": "nominal"
          },
          "tooltip": [
            { "field": "year", "type": "nominal", "title": "Year" },
            { "field": "net", "type": "quantitative", "title": "Net Flows of FDI" },
            { "field": "gdp_capita", "type": "quantitative", "title": "GDP Per Capita" }
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "left",
          "baseline": "middle",
          "dx": 5
        },
        "encoding": {
          "x": {
            "field": "net",
            "type": "quantitative"
          },
          "y": {
            "field": "gdp_capita",
            "type": "quantitative"
          },
          "text": {
            "field": "year",
            "type": "nominal"
          },
          "color": {
            "field": "year",
            "type": "nominal",
            "legend": null
          }
        }
      }
    ]
  }
  