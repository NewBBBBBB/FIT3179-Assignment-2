{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 930,
  "height": 450,
  "background": "transparent",
  "description": "Scatter plot showing the relationship between the poverty rate and the unemployment rate over time.",
  "data": {
    "url": "https://raw.githubusercontent.com/NewBBBBBB/FIT3179-Assignment-2/refs/heads/main/data/unemployment_poverty.csv",
    "format": {
      "type": "csv"
    }
  },
  "transform": [
    {
      "calculate": "year(datum.date)",
      "as": "year"
    }
  ],
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "x": {
          "field": "u_rate",
          "type": "quantitative",
          "title": "Unemployment Rate (%)"
        },
        "y": {
          "field": "poverty_absolute",
          "type": "quantitative",
          "title": "Poverty Rate (%)",
          "scale": {
            "domain": [
              0,
              10
            ]
          }
        },
        "color": {
          "field": "year",
          "type": "nominal",
          "title": "Year"
        }
      }
    },
    {
      "params": [
        {
          "name": "highlight",
          "select": {
            "type": "point",
            "on": "pointerover"
          }
        }
      ],
      "mark": "circle",
      "encoding": {
        "x": {
          "field": "u_rate",
          "type": "quantitative",
          "title": "Unemployment Rate (%)"
        },
        "y": {
          "field": "poverty_absolute",
          "type": "quantitative",
          "title": "Poverty Rate (%)",
          "scale": {
            "domain": [
              0,
              10
            ]
          }
        },
        "color": {
          "condition": {
            "param": "highlight",
            "field": "year",
            "type": "nominal",
            "legend": null,
            "scale": {
              "range": [
                "#1f77b4",
                "#aec7e8", 
                "#9467bd", 
                "#8c6bb1", 
                "#ff7f0e", 
                "#ffbb78", 
                "#8c564b", 
                "#d9b9a0",
                "#17becf", 
                "#7f7f7f" 
              ]
            }
          },
          "value": "black"
        },
        "opacity": {
          "condition": {
            "param": "highlight",
            "value": 1
          },
          "value": 0.3
        },
        "tooltip": [
          {
            "field": "year",
            "type": "nominal",
            "title": "Year"
          },
          {
            "field": "u_rate",
            "type": "quantitative",
            "title": "Unemployment Rate (%)"
          },
          {
            "field": "poverty_absolute",
            "type": "quantitative",
            "title": "Poverty Rate (%)"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5
      },
      "encoding": {
        "x": {
          "field": "u_rate",
          "type": "quantitative"
        },
        "y": {
          "field": "poverty_absolute",
          "type": "quantitative"
        },
        "text": {
          "field": "year",
          "type": "nominal"
        },
        "color": {
          "condition": {
            "param": "highlight",
            "field": "year",
            "type": "nominal",
            "legend": null,
            "scale": {
              "range": [
                "#1f77b4",
                "#aec7e8", 
                "#9467bd", 
                "#8c6bb1", 
                "#ff7f0e",
                "#ffbb78",
                "#8c564b", 
                "#d9b9a0", 
                "#17becf", 
                "#7f7f7f" 
              ]
            }
          },
          "value": "black"
        },
        "opacity": {
          "condition": {
            "param": "highlight",
            "value": 1
          },
          "value": 0.4
        }
      }
    },
    {
      "transform": [
        {
          "regression": "poverty_absolute",
          "on": "u_rate"
        }
      ],
      "mark": {
        "type": "line",
        "color": "black",
        "strokeDash": [
          5,
          5
        ]
      },
      "encoding": {
        "x": {
          "field": "u_rate",
          "type": "quantitative"
        },
        "y": {
          "field": "poverty_absolute",
          "type": "quantitative"
        }
      }
    },
    {
      "transform": [
        {
          "regression": "poverty_absolute",
          "on": "u_rate",
          "params": true
        },
        {
          "calculate": "'RÂ²: '+format(datum.rSquared, '.2f')",
          "as": "R2"
        }
      ],
      "mark": {
        "type": "text",
        "color": "black",
        "x": "width",
        "align": "right",
        "y": -5
      },
      "encoding": {
        "text": {
          "type": "nominal",
          "field": "R2"
        }
      }
    }
  ]
}