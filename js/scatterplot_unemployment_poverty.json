{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": {
    "text": "Correlation of Poverty Rate and Unemployment Rate ",
    "fontSize": 26
  },
  "description": "Scatter plot showing the relationship between the poverty rate and the unemployment rate over time.",
  "data": {
    "url": "https://raw.githubusercontent.com/NewBBBBBB/FIT3179-Assignment-2/refs/heads/main/data/unemployment_poverty.csv",
    "format": { "type": "csv" }
  },
  "transform": [
    {
      "calculate": "year(datum.date)",  
      "as": "year"  
    }
  ],
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "x": {
          "field": "u_rate",
          "type": "quantitative",
          "title": "Unemployment Rate (%)"
        },
        "y": {
          "field": "poverty_absolute",
          "type": "quantitative",
          "title": "Poverty Rate (%)",
          "scale": {
            "domain": [0, 10] 
          }
        },
        "color": {
          "field": "year",
          "type": "nominal",
          "title": "Year"
        }
      }
    },
    {
      "mark": "circle",
      "encoding": {
        "x": {
          "field": "u_rate",
          "type": "quantitative",
          "title": "Unemployment Rate (%)"
        },
        "y": {
          "field": "poverty_absolute",
          "type": "quantitative",
          "title": "Poverty Rate (%)",
          "scale": {
            "domain": [0, 10] 
          }
        },
        "color": {
          "field": "year",
          "type": "nominal"
        },
        "tooltip": [
          { "field": "year", "type": "nominal", "title": "Year" },
          { "field": "u_rate", "type": "quantitative", "title": "Unemployment Rate" },
          { "field": "poverty_absolute", "type": "quantitative", "title": "Poverty Rate (%)" }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5
      },
      "encoding": {
        "x": {
          "field": "u_rate",
          "type": "quantitative"
        },
        "y": {
          "field": "poverty_absolute",
          "type": "quantitative"
        },
        "text": {
          "field": "year", 
          "type": "nominal"
        },
        "color": {
          "field": "year",
          "type": "nominal",
          "legend": null,
          "scale": {"scheme": "tableau20"}
        }
      }
    },
    {
      "transform": [
        {
          "regression": "poverty_absolute",
          "on": "u_rate"
        }
      ],
      "mark": {
        "type": "line",
        "color": "black",
        "strokeDash": [5,5]
      },
      "encoding": {
        "x": {
          "field": "u_rate",
          "type": "quantitative"
        },
        "y": {
          "field": "poverty_absolute",
          "type": "quantitative"
        }
      }
    },
    {
      "transform": [
        {
          "regression": "poverty_absolute",
          "on": "u_rate",
          "params": true
        },
        {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
      ],
      "mark": {
        "type": "text",
        "color": "black",
        "x": "width",
        "align": "right",
        "y": -5
      },
      "encoding": {
        "text": {"type": "nominal", "field": "R2"}
      }
    }
  ]
}
